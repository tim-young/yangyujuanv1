package com.yangyujuan.jdbc.dao;

import com.yangyujuan.jdbc.domain.News;

public class NewsFilter {
	
	
	public NewsFilter(){		
	}
	
	/*
	 * 过滤news的函数
	 */
	public boolean isRightNews(News news){
		boolean flag = true;
		if(news.getBodytext()==null||news.getTitle()==null){
			flag = false;
		}
		return flag;
	}
	
	//是否可以被索引
	public static boolean isRightIndex(News news){
		boolean flag = true;
		if(news.getBodytext()==null||news.getTitle()==null||news.getPubTime()==null||news.getSource()==null){
			flag = false;
		}
		return flag;
	}
}
