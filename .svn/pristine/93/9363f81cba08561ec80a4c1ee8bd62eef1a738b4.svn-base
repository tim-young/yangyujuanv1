    <script>
        /*jshint ignore:start*/
        require('pagelet/nav/nav.js').create({
            'type': 'home'
        });
        require('pagelet/detailbar/detailbar.js').create({});

        
         
        require('pagelet/comment/comment.js').create({});
        require('pagelet/navline/nav_line.js').create({});

        /*jshint ignore:end*/
    </script>

</body>
</html>
